{
  "manifest_version": 3,
  "name": "Twickr for Hotstar",
  "short_name": "Twickr",
  "version": "0.1.15.0",
  "description": "Add live tweets to your sports streams on Hotstar",
  "icons": {
    "192": "icons/logo192.png"
  },
  "content_scripts": [
    {
      "matches": ["https://hotstar.com/*", "https://www.hotstar.com/*"],
      "js": ["js/content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["js/twitter_embed.js"],
      "matches": ["https://hotstar.com/*", "https://www.hotstar.com/*"]
    }
  ],
  "permissions": [],
  "host_permissions": ["https://www.google-analytics.com/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
